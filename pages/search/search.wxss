/* pages/search/search.wxss */

.top {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0 40rpx 0;
}

.search {
  width: 80rpx;
  height: 80rpx;
}

.sousuo {
  height: 80rpx;
  border: 1px solid black;
  width: 70%;
  background-color: white;
  border-radius: 40rpx 0 0 40rpx;
  border-color: #dcdcdc;
  padding-left: 5%; 
  font-size: 30rpx;
  margin-left: 5%
}

.all {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

navigator {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

image {
  width: 80%;
}

button {
  background-color: #37a1f4;
  color: white;
  border-radius: 0 40rpx 40rpx 0;
  height: 80rpx;
  width: 110rpx;
  font-size: 30rpx;
  margin: 0;
  padding: 0;
}
