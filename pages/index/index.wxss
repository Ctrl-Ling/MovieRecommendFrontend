.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.back {
  position: absolute;
  z-index: -1;
  height: 100%;
  width: 100%;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: white;
}

.usermotto {
  margin-top: 40px;
}

.movie {
  margin-top: 60px;
  border:1px solid white;
  color: white;
  padding: 15rpx;
  border-radius: 10rpx;
}

